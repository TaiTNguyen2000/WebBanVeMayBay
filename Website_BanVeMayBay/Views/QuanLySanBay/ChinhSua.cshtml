@model Website_BanVeMayBay.Models.SanBay

@{
    /**/

    ViewBag.Title = "Chỉnh sửa Sân bay";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Thông tin Mới của Sân bay</h2>

@using (Html.BeginForm("ChinhSua", "QuanLySanBay", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaSanBay)

        <div class="form-group">
            @Html.LabelFor(model => model.TenSanBay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenSanBay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenSanBay, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="background-color:orange;" value="Lưu thay đổi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại Trang Quản lý Sân bay", "Index")
</div>

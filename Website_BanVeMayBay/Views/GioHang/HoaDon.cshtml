@using Website_BanVeMayBay.Models;
@model List<GioHang>
<link href="~/Content/TrangChuCss.css" rel="stylesheet" />
@{
    ViewBag.Title = "Hóa đơn";
    Layout = "~/Views/LayOut/NguoiDungLayout.cshtml";
}
<div id="divGioHang">
    <table border="1" cellpadding="2" cellspacing="15" width="1000" height="400">
        <tr>
            <td id="ChuSo">Thông tin Người đặt :</td>
        </tr>
        <tr>
            <td id="ChuSo">Họ và Tên :</td>
            <td colspan="5">@ViewBag.NguoiDung.HoTen</td>
        </tr>
        <tr>
            <td id="ChuSo">Địa chỉ :</td>
            <td colspan="5">@ViewBag.NguoiDung.DiaChi</td>
        </tr>
        <tr>
            <td id="ChuSo">Số điện thoại :</td>
            <td colspan="5">@ViewBag.NguoiDung.DienThoai</td>
        </tr>
        <tr>
            <td id="ChuSo">Email :</td>
            <td colspan="5">@ViewBag.NguoiDung.Email</td>
        </tr>
        <tr>
            <td id="ChuSo">*************************</td>
            <td colspan="5" style="text-align:left;color:red;font-weight:bold;">****************************************************************</td>
        </tr>
        <tr>
            <td id="ChuSo">Thông tin vé :</td>
        </tr>
        <tr>
            <td id="TenCot">Đơn giá</td>
            <td id="TenCot">Số người lớn</td>
            <td id="TenCot">Danh sách người lớn</td>
            <td id="TenCot">Số trẻ em</td>
            <td id="TenCot">Danh sách trẻ em</td>
            <td id="TenCot">Thành tiền</td>
            <td id="TenCot">Ngày đi</td>
            <td id="TenCot">Ngày về</td>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td id="ChuSo">@string.Format("{0:0,0}", @item._DonGia) vnđ</td>
            <td id="ChuSo">@item._SoLuongNguoiLon</td>
            <td id="ChuSo">@item._DanhSachNguoiLon</td>
            <td id="ChuSo">@item._SoLuongTreEm</td>
            <td id="ChuSo">@item._DanhSachTreEm</td>
            <td id="ChuSo">@string.Format("{0:0,0}", @item._ThanhTien) vnđ</td>
            <td id="ChuSo">@item._NgayDi.Value.ToString("dd/MM/yyyy")</td>
            @if (item._NgayDen == null)
            {
                <td id="ChuSo"></td>
            }
            else
            {
                <td id="ChuSo">@item._NgayDen.Value.ToString("dd/MM/yyyy")</td>
            }
        </tr>
        }
        <tr>
            <td colspan="6" id="ChuSo">
                Tổng tiền: @Html.Action("GioHangTongTien", "GioHang")
            </td>
        </tr>
        <tr>
            <td colspan="6" id="TenCot">
                @using (Html.BeginForm("DatHang", "GioHang"))
                {
                    <input type="submit" style="background-color:green;color:white;font-size:12pt;cursor:pointer" value="Đặt hàng" />
                }
            </td>
        </tr>
    </table>
</div>

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/TemplateAdmin/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/TemplateAdmin/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/TemplateAdmin/css/style.css" rel="stylesheet" />
    <link href="~/Content/TemplateAdmin/css/style-responsive.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/tinymce/js/tinymce/tinymce.min.js"></script>
    <script>
    tinymce.init({
        selector: '#mytextarea'
    });
    </script>

</head>
<body>
    <!-- start: Header -->
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="#"><span>Danh mục</span></a>
            </div>
        </div>
    </div>
    <!-- start: Header -->

    <div class="container-fluid-full">
        <div class="row-fluid">

            <!-- start: Main Menu -->
            @if (ViewBag.Quyen == 3)
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("IndexVNA","QuanLyChuyenBay")"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Chuyến bay</span></a></li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }
            else if (ViewBag.Quyen == 4)
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("IndexVJ","QuanLyChuyenBay")"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Chuyến bay</span></a></li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }
            else if (ViewBag.Quyen == 5)
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("IndexJET","QuanLyChuyenBay")"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Chuyến bay</span></a></li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }
            else if (ViewBag.Quyen == 6)
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("IndexBAMBOO","QuanLyChuyenBay")"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Chuyến bay</span></a></li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }
            else if (ViewBag.Quyen == 2)
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("Index","QuanLyDonHang")"><i class="fa fa-ticket" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Đơn hàng</span></a></li>
                            <li>
                                <a href="@Url.Action("Index","QuanLyNguoiDung")"><i class="fa fa-user" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Người dùng</span></a>
                            </li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div id="sidebar-left" class="span2">
                    <div class="nav-collapse sidebar-nav">
                        <ul class="nav nav-tabs nav-stacked main-menu">
                            <li><a href="@Url.Action("Index","QuanLyChuyenBay")"><i class="fa fa-book" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Chuyến bay</span></a></li>
                            <li><a href="@Url.Action("Index","QuanLySanBay")"><i class="fa fa-building-o" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Sân bay</span></a></li>
                            <li><a href="@Url.Action("Index","QuanLyHangHangKhong")"><i class="fa fa-tags" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Hãng hàng không</span></a></li>
                            <li><a href="@Url.Action("Index","QuanLyDonHang")"><i class="fa fa-ticket" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Đơn hàng</span></a></li>
                            <li>
                                <a href="@Url.Action("Index","QuanLyNguoiDung")"><i class="fa fa-user" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Người dùng</span></a>
                            </li>
                            <li><a href="@Url.Action("Index","QuanLyTinTuc")"><i class="fa fa-newspaper-o" aria-hidden="true"></i><span class="hidden-tablet"> Quản lý Tin tức</span></a></li>
                            <li><a href="@Url.Action("Index","Home")"><i class="fa fa-arrow-left" aria-hidden="true"></i><span class="hidden-tablet"> Về Trang chủ</span></a></li>
                        </ul>
                    </div>
                </div>
            }

            <!-- end: Main Menu -->

            <noscript>
                <div class="alert alert-block span10">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
                </div>
            </noscript>

            <!-- start: Content -->
            <div id="content" class="span10">
                @RenderBody()
            </div><!--/.fluid-container-->
            <!-- end: Content -->
        </div><!--/#content.span10-->
    </div><!--/fluid-row-->

    <div class="modal hide fade" id="myModal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h3>Settings</h3>
        </div>
        <div class="modal-body">
            <p>Here settings can be configured...</p>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn" data-dismiss="modal">Close</a>
            <a href="#" class="btn btn-primary">Save changes</a>
        </div>
    </div>

    <div class="clearfix"></div>

    <footer>
        <p>
            <span style="text-align:left;float:left;">&copy; 2016 <a href="@Url.Action("Index","Home")" alt="Bootstrap_Metro_Dashboard">Về Trang chủ</a></span>
        </p>
    </footer>

    <!-- start: JavaScript-->
    <script src="~/Content/TemplateAdmin/js/jquery-1.9.1.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery-migrate-1.0.0.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery-ui-1.10.0.custom.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.ui.touch-punch.js"></script>
    <script src="~/Content/TemplateAdmin/js/modernizr.js"></script>
    <script src="~/Content/TemplateAdmin/js/bootstrap.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.cookie.js"></script>
    <script src='~/Content/TemplateAdmin/js/fullcalendar.min.js'></script>
    <script src='~/Content/TemplateAdmin/js/jquery.dataTables.min.js'></script>
    <script src="~/Content/TemplateAdmin/js/excanvas.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.flot.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.flot.pie.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.flot.stack.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.flot.resize.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.chosen.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.uniform.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.cleditor.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.noty.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.elfinder.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.raty.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.iphone.toggle.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.uploadify-3.1.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.gritter.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.imagesloaded.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.masonry.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.knob.modified.js"></script>
    <script src="~/Content/TemplateAdmin/js/jquery.sparkline.min.js"></script>
    <script src="~/Content/TemplateAdmin/js/counter.js"></script>
    <script src="~/Content/TemplateAdmin/js/retina.js"></script>
    <script src="~/Content/TemplateAdmin/js/custom.js"></script>
    <script src="~/ckfinder/ckfinder.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
    <!-- end: JavaScript-->

</body>
</html>
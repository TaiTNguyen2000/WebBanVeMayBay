@model Website_BanVeMayBay.Models.ChiTietDonHang


@{
    ViewBag.Title = "Chỉnh sửa Mã chuyến bay";
    Layout = "~/Views/LayOut/AdminLayout.cshtml";
}

<h2>Mã chuyến bay mới của Đơn hàng</h2>

@using (Html.BeginForm("ChinhSuaMaChuyenBay", "QuanLyDonHang", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaChiTietDonHang)
    @Html.HiddenFor(model => model.MaDonHang)
    @Html.HiddenFor(model => model.SoLuongNguoiLon)
    @Html.HiddenFor(model => model.SoLuongTreEm)
    @Html.HiddenFor(model => model.DonGia)

    <div class="form-group">
        @Html.LabelFor(model => model.MaChuyenBay, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaChuyenBay, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaChuyenBay, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" style="background-color:orange;" value="Lưu thay đổi" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở lại Trang Quản lý Chuyến bay", "Index")
</div>
